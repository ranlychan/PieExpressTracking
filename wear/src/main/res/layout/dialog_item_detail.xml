<?xml version="1.0" encoding="utf-8"?>

<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="@dimen/box_inset_layout_padding"
    tools:deviceIds="wear">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:src="@drawable/com_zto" />

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="5sp"
                android:text="Name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/detail_No"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="No"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/detail_trace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Trace"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/detail_bt_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/round_button_height"
                android:src="@android:drawable/ic_popup_sync"/>

            <ImageButton
                android:id="@+id/detail_bt_delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/round_button_height"
                android:src="@android:drawable/ic_menu_delete"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/round_button_height" />

        </LinearLayout>
    </ScrollView>

</androidx.wear.widget.BoxInsetLayout>